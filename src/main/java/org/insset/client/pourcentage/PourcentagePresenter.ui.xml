<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
         xmlns:g='urn:import:com.google.gwt.user.client.ui'
        xmlns:menu="urn:import:org.insset.client.menu">

  <g:HTMLPanel>
    <menu:Menu ui:field="menu"/>
    <h1>Projet de mise en pratique Scrum</h1>       
    <div class="bs-section">

        <g:FlowPanel>          
            <g:FlowPanel>
                <g:Label>Pourcentage</g:Label>
            </g:FlowPanel>
            <g:FlowPanel>          
              <g:TextBox ui:field="MontantDepart" text="Montant de Depart"/>
              <g:TextBox ui:field="Pourcentage" text="Pourcentage"/>
            </g:FlowPanel>
            <g:FlowPanel>
                <g:Label ui:field="errorLabelPourcentage" ></g:Label>
            </g:FlowPanel>
            <g:FlowPanel ui:field="formAction" >
                <g:SubmitButton ui:field="boutonPourcentage" text="Envoyer"/>
                <g:ResetButton ui:field="boutonClearPourcentage" text="Clear"/>
            </g:FlowPanel>
             <g:FlowPanel>
                <g:Label>Division de deux entiers</g:Label>
            </g:FlowPanel>
            <g:FlowPanel>          
              <g:TextBox ui:field="Dividende" text="Dividende"/>
              <g:TextBox ui:field="Diviseur" text="Diviseur"/>
            </g:FlowPanel>
            <g:FlowPanel>
                <g:Label ui:field="errorLabel" ></g:Label>
            </g:FlowPanel>
            <g:FlowPanel ui:field="formActions" >
                <g:SubmitButton ui:field="boutonDivision" text="Envoyer"/>
                <g:ResetButton ui:field="boutonClear" text="Clear"/>
            </g:FlowPanel>
        </g:FlowPanel>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>